{
    "version": "1.0",
    "cmdLineOptions": {
        "banner": "#!jsv: (app) => `This is the program banner v${app.version}`",
        "program": "cli-worker",
        "arguments": [
            { "name": "target file", "required": true }
        ],  
        "options": {
            "e": {
                "desc": "Target environment",
                "alias": [ "env", "environment" ],
                "default": "development"
            },            
            "v": {
                "desc": "Show version number",
                "alias": [ "version" ],
                "isBool": true,
                "default": false
            },
            "?": {
                "desc": "Show usage message",
                "alias": [ "help" ],
                "isBool": true,
                "default": false
            }
        }
    },  
    "bootstrap": {},
    "devConfigByGitUser": {
        "altUserForTest": "rockie"
    },
    "settings": {
        "parser": {
            "lib": "default"
        }
    },
    "loggers": {
        "trace": {
            "transports": [
               {
                   "type": "console",                   
                   "options": {      
                       "level": "info",                      
                       "format": "#!jsv: log.format.combine(log.format.colorize(), log.format.simple())"
                   }
               },
               {
                   "type": "daily-rotate-file",                   
                   "options": {
                       "level": "verbose",
                       "filename": "trace-%DATE%.log",
                       "datePattern": "YYYYMMDD"
                   }
               }
           ]
        },
        "bi": {
            "transports": [
                {
                   "type": "mongodb",
                   "options": {
                       "db": "#!jsv: env.USER_MONGODB_URL || 'mongodb://root:root@localhost/bi-logs?authSource=admin'",
                       "format": "#!jsv: log.format.combine(log.format.splat(), log.format.json())"                
                   }
               }
            ]
        }
    }
}